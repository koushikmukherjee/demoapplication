@model Demo.Model.StudentModel
@{
    ViewBag.Title = "Student Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student Detail</h2>
@if (Model != null)
{
    <div class="tab-content">
        <div class="tab-pane form-details fade in active" style="max-width:1024px;">
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(m=>m.FirstName, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                       <label class="control-label">@Model.FirstName</label>
                        </div>
                    </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <label class="control-label">@Model.LastName</label>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <label class="control-label">@Model.Email</label>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Mobile, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <label class="control-label">@Model.Mobile</label>
                    </div>
                </div>
                </div>
            </div>
        </div>
                }


